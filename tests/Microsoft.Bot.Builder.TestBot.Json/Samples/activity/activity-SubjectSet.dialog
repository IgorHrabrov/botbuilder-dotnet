{
    "$schema": "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/map/schemas/sdk.schema",
    "$type": "Microsoft.OnSetProperty",
    "property": "Subject",
    "actions": [
        {
            "$type": "Microsoft.SwitchCondition",
            "condition": "turn.schema.properties['Subject'].$mappings[0]",
            "cases": [
                {
                    "value": "utterance",
                    "actions": [
                        {
                            "$type": "Microsoft.SetProperty",
                            "property": "$Subject",
                            "value": "@utterance"
                        }
                    ]
                },
                {
                    "value": "datetime",
                    "actions": [
                        {
                            "$type": "Microsoft.SetProperty",
                            "property": "$Subject",
                            "value": "join(@datetime.timex,', ')"
                        }
                    ]
                },
                {
                    "value": "datetimeV2",
                    "actions": [
                        {
                            "$type": "Microsoft.SetProperty",
                            "property": "$Subject",
                            "value": "join(@datetime.timex,', ')"
                        }
                    ]
                },
                {
                    "value": "email",
                    "actions": [
                        {
                            "$type": "Microsoft.SetProperty",
                            "property": "$Subject",
                            "value": "@email"
                        }
                    ]
                }
            ],
            "default": [
                {
                    "$type": "Microsoft.SetProperty",
                    "property": "$Subject",
                    "value": "turn.recognized.entities[turn.schema.properties['Subject'].$mappings[0]]"
                }
            ]
        }
    ]
}